<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="1 - Quanto é 1 + 5?"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio1_1"
            android:text="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio2_1"
            android:text="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio3_1"
            android:text="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio4_1"
            android:text="Opção 3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RadioGroup>
    <RadioGroup
        android:id="@+id/group2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="1 - Qual é o nome do foguinho?"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio1_2"
            android:text="Foguinho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio2_2"
            android:text="Jão"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio3_2"
            android:text="Wesllen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio4_2"
            android:text="Nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RadioGroup>
    <RadioGroup
        android:id="@+id/group3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="1 - Por que não desistir da faculdade?"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio1_3"
            android:text="Já paguei muito dinheiro pra desistir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio2_3"
            android:text="Pelo conheimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio3_3"
            android:text="Gosto de estudar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio3_4"
            android:text="Não sei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RadioGroup>

    <Button
        android:onClick="verificar"
        android:text="Verificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>